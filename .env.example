# Production Environment Variables Template
# Copy to .env and fill in your actual values

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@host:port/database

# Email Service (Required)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Security Keys (Required - Generate secure random strings)
JWT_SECRET=your_256_bit_jwt_secret_here
SESSION_SECRET=your_256_bit_session_secret_here

# Application Configuration
NODE_ENV=production
PORT=8080

# Optional: AI Services (if using advanced features)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Database Connection Details (for reference)
PGHOST=your_postgres_host
PGPORT=5432
PGDATABASE=your_database_name
PGUSER=your_username
PGPASSWORD=your_password